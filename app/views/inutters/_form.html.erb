<!--フォームの宣言-->
<%=form_for(@inutter,url:choose_new_or_edit ) do |f| %>　<!--分岐時にヘルパーメソッドの利用-->
  <% if @inutter.errors.any? %> <!--エラー存在時に以下実行-->
    <div id="error_explanation" >
      <!-- バリデーションエラーの件数を表示-->
      <h2><%= @inutter.errors.count %>件のエラーがあります。</h2>

      <ul>
       <!--@inutter.errorsは@inutterをバリデーションした際のエラー情報-->
       <!--full_messagesは複数のエラーメッセージを表す-->
      <% @inutter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :内容 %>
  <br>
  <%= f.text_field :content,class: 'form-control' %>
  <br>
  <%= f.submit '投稿',class: 'btn btn-primary btn-block' %>
  
<% end %> <!--formの終わりを宣言-->

<%=link_to "投稿一覧へ戻る",inutters_path %>